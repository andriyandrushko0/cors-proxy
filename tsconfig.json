{
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "dist"],
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./dist/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
